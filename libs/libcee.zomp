  var astp code ${}

  forEachAstChild arg args
    ast:addChild code ${zmp:cee:print #arg}
  end

  ret code
end

macro printnl args...
  var astp code ${}

  forEachAstChild arg args
    ast:addChild code ${zmp:cee:print #arg}
  end

  ast:addChild code ${println()}

  ret code
end

func void printBits(int bitmask)
  printString "0b"
  for i 0 32
    bitnum := 31 - i
    mask := int:shl 1 bitnum
    bit := int:lshr (bitmask & mask) bitnum
    printInt bit
  end
end

