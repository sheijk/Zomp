func ast* defineOpCode(cstring type, cstring rettype, cstring opr, cstring func)
  funcname := type ++ ":" ++ func
  oprname := opr ++ "_" ++ type ++ "_" ++ type

  ret ${
    func #rettype #oprname(#type l, #type r)
      #funcname(l, r)
    end
  end}
end

