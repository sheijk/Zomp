///
/// Printing ascii escape sequences for colors
///

requireLibs libcee ansicolors

func int main():
  println fmtBold "fmtBold"
  println fmtLight "fmtLight" fmtDefault

  println fmtBlack "fmtBlack" fmtDefault
  println fmtRed "fmtRed" fmtDefault
  println fmtGreen "fmtGreen" fmtDefault
  println fmtYellow "fmtYellow" fmtDefault
  println fmtBlue "fmtBlue" fmtDefault
  println fmtMagenta "fmtMagenta" fmtDefault
  println fmtCyan "fmtCyan" fmtDefault
  println fmtGray "fmtGray" fmtDefault

  println fmtBlackBG "fmtBlackBG" fmtDefault
  println fmtRedBG "fmtRedBG" fmtDefault
  println fmtGreenBG "fmtGreenBG" fmtDefault
  println fmtYellowBG "fmtYellowBG" fmtDefault
  println fmtBlueBG "fmtBlueBG" fmtDefault
  println fmtMagentaBG "fmtMagentaBG" fmtDefault
  println fmtCyanBG "fmtCyanBG" fmtDefault
  println fmtGrayBG "fmtGrayBG" fmtDefault

  println fmtBold "bold " fmtLight "light " fmtNormalWeight "normal"
  println fmtDefault "blink " fmtBlink "on " fmtBlinkOff "off"
  println fmtDefault "inverse fg/bg " fmtNegative "on " fmtPositive "off"
  println fmtDefault "underline " fmtUnderline "on " fmtUnderlineOff "off"
  println fmtDefault "italic " fmtItalic "on " fmtItalicOff "off"
  
  ret 0
end


